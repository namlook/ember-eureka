
{{#if label}}
    <fieldset>
        <legend> {{label}} </legend>
        {{#each rows as |widgetConfigurationsRow|}}
            {{#widget-container-row widgetConfigurations=widgetConfigurationsRow
                routeModel=routeModel
                currentController=currentController
                toControllerAction="toControllerAction"}}
                    {{yield}}
            {{/widget-container-row}}
        {{/each}}
    </fieldset>
{{else}}
    {{#each rows as |widgetConfigurationsRow|}}
        {{#widget-container-row widgetConfigurations=widgetConfigurationsRow
            routeModel=routeModel
            currentController=currentController
            toControllerAction="toControllerAction"}}
                {{yield}}
        {{/widget-container-row}}
    {{/each}}
{{/if}}