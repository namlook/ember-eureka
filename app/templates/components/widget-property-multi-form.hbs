<ul class="list-unstyled">
    {{#each field in field.values}}
        <li class="form-inline">
            <div class="form-group">
                {{component propertyComponentName field=field ~}}
                <button class="btn btn-danger" {{action 'removeValue' field}}>&times;</button>
            </div>
        </li>
    {{/each}}
</ul>
<button class="btn btn-default" {{action 'addValue'}}> &#43; </button>