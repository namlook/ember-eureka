
{{#if isArray}}
    <ul>
        {{#each val in value}}
            <li>
            {{#if val._id}}
                {{#link-to 'type.display' val._type val._id}}{{val.title}}{{/link-to}}
            {{else}}
                {{val}}
            {{/if}}
            </li>
        {{/each}}
    </ul>
{{else}}
    {{#if isRelation}}
        {{#link-to 'type.display' value._type value._id}}{{value.title}}{{/link-to}}
    {{else}}
        {{#if isI18n}}
            {{value.title}}
        {{else}}
            {{value}}
        {{/if}}
    {{/if}}
{{/if}}
