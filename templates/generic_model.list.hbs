<div {{bind-attr class=":eureka-filter-section filters.length::eureka-filter-section-empty"}}>
    <ul class="nav nav-tabs">
        {{#if filters.length}}
            {{#link-to model.__meta__.indexRouteName
                tagName="li"
                href=false
                classNames="eureka-link-to-index"
                classNameBindings="model.__meta__.EurekaGenericModelModelCSS"}}
                    <a href="#">All</a>
            {{/link-to}}
            {{#each filter in filters}}
                {{#link-to filter.route
                    tagName="li"
                    href=false
                    classNames="eureka-filter-to"
                    classNameBindings="model.__meta__.EurekaGenericModelModelCSS"}}
                        <a href="#">
                            <i {{bind-attr class="filter.icon"}}></i>
                            <span class="hidden-xs">{{filter.label}}</span>
                        </a>
                {{/link-to}}
            {{/each}}
        {{/if}}
    </ul>
</div>

<div class="row">
    <!-- results -->
    <div class="col-xs-9 col-sm-9">
        <div class="eureka-results clearfix">
            {{#if tableView}}
                {{!-- {{partial 'components/generic_model-list-table'}} --}}
                {{model-list-table model=model itemClicked='displayItem'}}
            {{else}}
                {{!-- {{partial 'components/generic_model-list'}} --}}
                {{model-list model=model}}
            {{/if}}
        </div>
    </div>

    <!-- search and faceting -->
    <div class="col-xs-3 col-sm-3">
        <form class="eureka-search-section form-inline text-right" role="form">
            <div class="form-group has-feedback eureka-search-query-container">
                <span class="glyphicon glyphicon-search form-control-feedback search-icon"></span>
                {{#search-query action="searchModel" model=model}}{{/search-query}}
            </div>
            {{#if sorting.length}}
                <div class="form-group eureka-sortby-selection">
                    order by {{view Ember.Select
                                   content=sorting
                                   optionValuePath="content.order"
                                   optionLabelPath="content.label"
                                   value=currentSorting}}
                </div>
            {{/if}}
        </form>

        <h3>Filters</h3>
        {{#each facetedField in facetedFields}}
            {{faceted-field fieldPath=facetedField.fieldPath
                fieldName=facetedField.fieldName
                query=query
                limit=facetedField.limit
                modelType=model.type
                action='searchModel'}}
        {{/each}}

    </div>
</div>
